AIRBYTE_TEST_PG_PORT=5432
AIRBYTE_TEST_PG_DB=test
AIRBYTE_TEST_PG_USER=postgres
AIRBYTE_TEST_PG_PASSWORD=postgres

# PostgreSQL destination configuration
AIRBYTE_TEST_PG_DEST_HOST=localhost
AIRBYTE_TEST_PG_DEST_PORT=5432
AIRBYTE_TEST_PG_DEST_DB=test
AIRBYTE_TEST_PG_DEST_USER=postgres
