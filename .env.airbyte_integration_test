# Airbyte Integration Test Configuration

# Set to true to enable Airbyte integration tests
AIRBYTE_TEST_ENABLED=false

# Comma-separated list of destination types to test
# Options: postgres, local-csv, s3
AIRBYTE_TEST_DESTINATIONS=postgres

# Comma-separated list of source types to test
# Options: file, postgres, google-sheets, kobo-toolbox
AIRBYTE_TEST_SOURCES=file

# Timeout settings (in seconds)
AIRBYTE_TEST_TIMEOUT=300
AIRBYTE_SYNC_WAIT_INTERVAL=10
AIRBYTE_MAX_WAIT_CYCLES=30

# PostgreSQL source configuration
